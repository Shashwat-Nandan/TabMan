{
  "manifest_version": 3,
  "name": "TabMan - Multi Tab Manager",
  "version": "1.0.0",
  "description": "Manage and organize your browser tabs with categories and descriptions",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "dashboard.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
